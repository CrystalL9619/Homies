doctype html
html
  head
    title Homies App
    link(rel="stylesheet" type="text/css" href="/css/styles.css")
    script(src="/js/common.js")
    //- script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkC-ET8CAIbHDgLfT9Wagi3p_1TE--EWY&callback=initMap")
    script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC4nz0AtatqrLbeGztbb497pwBe5LcimmM&libraries=places")
  body
    .header
      h1 Homies
      ul
        if user
          li Hi! #{user.username}
          li
            a(href='#' onclick='submitLogoutForm()') Logout
            form#logout-form(action='/logout?_method=DELETE' method='POST' style='display: none;')
          if user.role === 'admin'
            li
              a(href='/admin') Admin Portal
        else
          li
            a(href='/login') Login
  nav
    ul
      a(href='/') Home
      a(href='/sale') Sale
      a(href='/rent') Rent
    input.search(
    type='text'
    name='search'
    id='searchBar'
    placeholder='Search for a Location '
    )
  block content
  footer
    p Â© 2024 Homie App. All rights reserved.


  script.
    function submitLogoutForm() {
      document.getElementById('logout-form').submit();
    }